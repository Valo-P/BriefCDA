<!DOCTYPE html>
<html lang="fr">
<head>
    <%- include('../head'); %>
</head>
<body>
<%- include('../header'); -%>
<main class="container">
    <h1><%= category.categoryName %></h1>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <% products.forEach((product) => { %>
            <div class="col">
                <div class="card border-dark mb-3 h-100" style="max-width: 18rem;">
                    <div class="card-header">ID : <%= product._id %></div>
                    <div class="card-body text-dark">
                        <h5 class="card-title"><%= product.productName %></h5>
                        <p class="card-text"><%= product.productDescription %></p>
                        <p class="card-text"><%= product.productPrice %>â‚¬</p>
                        <a href="/category/<%= product.productCategory %>" class="card-link">View Category</a>
                        <a href="/product/<%= product._id %>" class="card-link">View Product</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</main>
<%- include('../footer'); -%>
</body>
</html>